{
  "name": "Ruby China插件",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Ruby China插件",
  "homepage_url": "http://ruby-china.org/wiki/ruby-china-apps",
  "background": {
        "page": "background.html"
  },
  "options_page": "option.html",
  "icons": {
      "16" : "images/icon_16.png",
      "48" : "images/icon_48.png",
      "128": "images/icon_128.png"
  },
  "default_locale" : "en",
  "browser_action": {
    "default_icon": "images/icon_19.png",
    "default_title": "Ruby China",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs","http://ruby-china.org/*" ]
}
